<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/red_button"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:text="@string/red_button"
        android:background="@drawable/button_bg_color_change_red"
        />


    <Button
        android:id="@+id/blue_button"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:text="@string/blue_button"
        android:background="@drawable/button_bg_color_change_blue"
        />

    <Button
        android:id="@+id/green_button"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/button_bg_color_change_green"
        android:text="@string/green_button" />
</LinearLayout>